<div class="container">
  <div class="col-md-10 col-sm-offset-1 col-md-offset-2">
    <%= form_tag(search_path, :method => 'get', id: 'search-form', class: 'form-inline') do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], placeholder: 'Enter Movie Titles', class: 'form-control' %>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
