  <div class="col-md-10 col-sm-offset-1 col-md-offset-2">
    <%= form_tag(search_path, :method => 'get', id: 'search-form') do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Movie Titles' %>
      <%= submit_tag 'Search' %>
    <% end %>
  </div>
</div>
